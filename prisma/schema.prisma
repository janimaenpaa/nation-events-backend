generator client {
  provider = "prisma-client-js"
  seed     = "prisma/seed.ts"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Nation {
  id                Int     @id @default(autoincrement())
  abbreviation      String
  customCalendarUrl String?
  googleCalendarId  String?
  icalUrl           String?
  kideUrl           String?
  name              String
  url               String
  events            Event[]
}

model Event {
  id          Int    @id @default(autoincrement())
  description String?
  name        String
  endTime     String
  startTime   String
  url         String?
  nationId    Int
  nation      Nation @relation(fields: [nationId], references: [id])
}
